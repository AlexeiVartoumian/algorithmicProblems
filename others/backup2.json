{
    "plans": {
      "RDS_Backup_Plan": {
        "rules": {
          "Daily_Backup_Rule": {
            "schedule_expression": {
              "@@assign": "cron(51 * ? * * *)"
            },
            "start_backup_window_minutes": {
              "@@assign": "60"
            },
            "complete_backup_window_minutes": {
              "@@assign": "360"
            },
            "enable_continuous_backup": {
              "@@assign": false
            },
            "target_backup_vault_name": {
              "@@assign": "Production_Backup_Vault"
            },
            "recovery_point_tags": {
              "Environment": {
                "tag_key": {
                  "@@assign": "Environment"
                },
                "tag_value": {
                  "@@assign": "Production"
                }
              }
            },
            "lifecycle": {
              "move_to_cold_storage_after_days": {
                "@@assign": "90"
              },
              "delete_after_days": {
                "@@assign": "365"
              },
              "opt_in_to_archive_for_supported_resources": {
                "@@assign": false
              }
            },
            "copy_actions": {
              "arn:aws:backup:eu-west-2:390746273208:backup-vault:Secondary_Vault": {
                "target_backup_vault_arn": {
                  "@@assign": "arn:aws:backup:eu-west-2:390746273208:backup-vault:Secondary_Vault"
                },
                "lifecycle": {
                  "move_to_cold_storage_after_days": {
                    "@@assign": "90"
                  },
                  "delete_after_days": {
                    "@@assign": "365"
                  },
                  "opt_in_to_archive_for_supported_resources": {
                    "@@assign": false
                  }
                }
              }
            }
          }
        },
        "regions": {
          "@@append": [
            "eu-west-1",
            "eu-west-2"
          ]
        },
        "selections": {
          "tags": {
              "RDS_Backup_Selection": {
                "iam_role_arn": {
                  "@@assign": "arn:aws:iam::$account:role/AWSBackupProductionRole"
                },
                "tag_key": {
                  "@@assign": "backup"
                },
                "tag_value": {
                  "@@assign": [
                    "y"
                  ]
                },
                "resources": {
                  "@@assign": [
                    "arn:aws:rds:*:*:*",
                    "arn:aws:s3:*:*:*"
                  ]
                }
              }
            }
        },
        "backup_plan_tags": {
          "environment": {
            "tag_key": {
              "@@assign": "Environment"
            },
            "tag_value": {
              "@@assign": "Production"
            }
          }
        }
      }
    }
  }